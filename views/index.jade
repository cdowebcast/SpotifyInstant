doctype html
html
	head
		title= title
		link(rel='stylesheet' href='./stylesheets/style.css')
		link(rel='stylesheet' href='//netdna.bootstrapcdn.com/bootstrap/3.1.1/css/bootstrap.min.css')
		script(src='//code.jquery.com/jquery-1.11.0.min.js')
	body
		.jumbotron.text-center#main
			img#logo(src='./images/spotify_logo.png')
			br
			input.form-control#search(type='text' placeholder='Search here!')
			script.
				$(document).focus();
			br
			br
			iframe#player(src='' frameborder='0' allowtransparency='true')
			div#footer
				p.description Open source project by <a href='http://rukmal.me' class='link'>Rukmal Weerawarana</a> (<a href='http://twitter.com/rukmal_w' class='link'>@rukmal_w</a>).
				p.description Inspired by <a href='http://goel.im' class='link'>Karan Goel's</a> project <a href='http://karan.github.io/scInstant/' class='link'>scInstant</a>.
			script.
				var SPOTIFY_METADATA_URL = '//ws.spotify.com/search/1/track.json?q='
				var SPOTIFY_PLAY_WIDGET_URL = '//embed.spotify.com/?uri='
				$('#search').on('input', function() {
					var text = $(this).val(); // getting the text from the text box
					var formattedText = text.replace(' ', '+'); // formatting the text for Spotify API
					// Making a request to the Spotify API
					$.get(SPOTIFY_METADATA_URL + formattedText, function (data) {
						// consolidating the song url of the first result if it exists,
						// and changing the URL of the spotify now playing widget
						if (data.tracks[0]) {
							var songURL = data.tracks[0].href; // consolidating Spotify song url
							console.log(songURL)
							$('#player').attr({
								src: SPOTIFY_PLAY_WIDGET_URL + songURL
							});
							$('#player').find('.play-pause-btn').click();
						}
					});
				});
